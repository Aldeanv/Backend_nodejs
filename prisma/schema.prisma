generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String    @default("user")
  NIK       String?   // Nullable
  phone     String?   // Nullable
  createdAt DateTime  @default(now())
  wishlists Catalog[] @relation("UserWishlist")
}

model Catalog {
  id        Int       @id @default(autoincrement())
  title     String
  author    String
  genre     String
  year      Int
  type      String
  publisher String
  synopsis  String
  coverUrl  String
  createdAt DateTime   @default(now())
  wishedBy  User[]     @relation("UserWishlist")
}
